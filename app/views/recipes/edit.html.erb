<h2 class="mb-4">レシピ編集</h2>

<div class="card p-4 shadow-sm">
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">入力内容に誤りがあります</h4>
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @recipe, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :title, 'タイトル', class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :body, '説明', class: 'form-label' %>
      <%= f.text_area :body, class: 'form-control', rows: 3 %>
    </div>

    <div class="mb-3">
      <%= f.label :image, 'レシピ画像', class: 'form-label' %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :ingredients, '材料', class: 'form-label' %>
      <%= f.text_area :ingredients, class: 'form-control', rows: 4 %>
    </div>

    <div class="mb-3">
      <%= f.label :instructions, '作り方', class: 'form-label' %>
      <%= f.text_area :instructions, class: 'form-control', rows: 5 %>
    </div>

    <div class="text-center">
      <%= f.submit '更新する', class: 'btn btn-success px-4' %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to '戻る', recipe_path(@recipe), class: 'btn btn-outline-secondary' %>
  </div>
</div>
