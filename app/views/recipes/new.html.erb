<!-- app/views/recipes/new.html.erb -->
<div class="card p-4 shadow-sm">
  <h2 class="mb-4">新規レシピ投稿</h2>

  <%= form_with model: @recipe, local: true, html: { multipart: true } do |f| %>
    <% if @recipe.errors.any? %>
      <div class="alert alert-danger">
        <h5>以下のエラーがあります：</h5>
          <ul>
            <% @recipe.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= f.label :title, 'タイトル', class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :body, '説明', class: 'form-label' %>
      <%= f.text_area :body, class: 'form-control', rows: 3 %>
    </div>

    <div class="mb-3">
      <%= f.label :ingredients, '材料', class: 'form-label' %>
      <%= f.text_area :ingredients, class: 'form-control', rows: 3 %>
    </div>

    <div class="mb-3">
      <%= f.label :instructions, '作り方', class: 'form-label' %>
      <%= f.text_area :instructions, class: 'form-control', rows: 4 %>
    </div>

    <div class="mb-3">
      <%= f.label :image, 'レシピ画像', class: 'form-label' %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="mt-4">
      <%= f.submit '投稿する', class: 'btn btn-primary' %>
      <%= link_to 'キャンセル', recipes_path, class: 'btn btn-secondary ms-2' %>
    </div>
  <% end %>
</div>
