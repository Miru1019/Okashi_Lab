<h2>ユーザー一覧</h2>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>投稿数</th>
      <th>登録日</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.recipes.count %></td>
        <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
        <td><%= link_to 'プロフィール', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>