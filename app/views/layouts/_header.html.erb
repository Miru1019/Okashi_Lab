<% if user_signed_in? %> <!-- ログインしている時だけ表示 -->

  <%= form_with url: search_path, method: :get, local: true do |form| %>
    
    <%= form.text_field :keyword, placeholder: "検索ワードを入力" %>
    <%= form.select :model, options_for_select([['ユーザー', 'user'], ['レシピ', 'recipe']]) %>
    <%= form.select :search_type, options_for_select([['部分一致', 'partial'], ['完全一致', 'exact']]) %>
    <%= form.submit "検索" %>
  <% end %>
<% end %>
